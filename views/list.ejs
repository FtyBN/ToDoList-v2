<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% newListItem.forEach((items)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkBox" value=<%= items._id %>  onChange="this.form.submit()"/>
      <p><%= items.toDoItems %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <% }) %>

  <form action="/" method="post">
    <input
      type="text"
      name="newListItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
